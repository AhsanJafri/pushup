{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/screens/*": ["screens/*"],
      "@/utils/*": ["utils/*"],
      "@/redux/*": ["api/*"],
      "@/app/*": ["app/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native"
  }
}
